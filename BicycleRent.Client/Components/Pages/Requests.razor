</div>


@code {
    private List<Rent> _rents = new();
    private List<BicycleRenter> _renters = new();
    private List<Bicycle> _bikes = new();
    private List<BicycleType> _types = new();

    private string rentUrl = "api/RentDb";
    private string renterUrl = "api/BicycleRenterDb";
    private string bikeUrl = "api/BicycleDb";
    private string typeUrl = "api/BicycleTypeDb";




    private List<BicycleDto> query1 = null!;
    private List<BicycleRenterDto> query2 = null!;
    private List<NumberAndEntity<double, BicycleTypeDto>> query3 = null!;
    private List<NumberAndEntity<int, BicycleRenterDto>> query4 = null!;
    private List<NumberAndEntity<int, BicycleDto>> query5 = null!;
    private List<double> query6 = null!;



    private async Task LoadTypes()
    {
        var responseType = await Http.GetFromJsonAsync<List<BicycleType>>(typeUrl);
        if (responseType != null)
        {
            _types = responseType;
        }
    }

    private async Task LoadRents()
    {
        var responseRent = await Http.GetFromJsonAsync<List<Rent>>(rentUrl);
        if (responseRent != null)
        {
            _rents = responseRent;
        }
    }

    private async Task LoadRenters()
    {
        var responseRenter = await Http.GetFromJsonAsync<List<BicycleRenter>>(renterUrl);
        if (responseRenter != null)
        {
            _renters = responseRenter;
        }
    }

    private async Task LoadBikes()
    {
        var responseBike = await Http.GetFromJsonAsync<List<Bicycle>>(bikeUrl);
        if (responseBike != null)
        {
            _bikes = responseBike;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadRents();
        await LoadRenters();
        await LoadBikes();
        await LoadTypes();
    }

    private async Task ClickHandler(int taskId)
    {
        switch (taskId)
        {
            case 1:
                var response1 = await Http.GetFromJsonAsync<List<BicycleDto>>("api/JobRequestsDb/GetInfoSportBike?departure");
                if (response1 != null)
                {
                    query1 = response1;
                }
                break;
            case 2:
                var response2 = await Http.GetFromJsonAsync<List<BicycleRenterDto>>("api/JobRequestsDb/GetInfoClientMountain");
                if (response2 != null)
                {
                    query2 = response2;
                }
                break;
            case 3:
                var response3 = await Http.GetFromJsonAsync<List<NumberAndEntity<double, BicycleTypeDto>>>("api/JobRequestsDb/GetSumTimeRentForType");
                if (response3 != null)
                {
                    query3 = response3;
                }
                break;
            case 4:
                var response4 = await Http.GetFromJsonAsync<List<NumberAndEntity<int, BicycleRenterDto>>>("api/JobRequestsDb/GetClientsMaxRent");
                if (response4 != null)
                {
                    query4 = response4;
                }
                break;
            case 5:
                var response5 = await Http.GetFromJsonAsync<List<NumberAndEntity<int, BicycleDto>>>("api/JobRequestsDb/GetTopRentBikes");
                if (response5 != null)
                {
                    query5 = response5;
                }
                break;
            case 6:
                var response6 = await Http.GetFromJsonAsync<List<double>>("api/JobRequestsDb/GetStatisticTimeRent");
                if (response6 != null)
                {
                    query6 = response6;
                }
                break;
        }
    }

    private void ClearTask(int taskId)
    {
        switch (taskId)
        {
            case 1:
                query1 = null!;
                break;
            case 2:
                query2 = null!;
                break;
            case 3:
                query3 = null!;
                break;
            case 4:
                query4 = null!;
                break;
            case 5:
                query5 = null!;
                break;
            case 6:
                query6 = null!;
                break;
        }
    }

    private string GetRenterName(int renterId) => _renters?.FirstOrDefault(p => p.RenterId == renterId)?.FullName!;
    private string GetBikeSerialNumber(int bikeId) => _bikes?.FirstOrDefault(p => p.BicycleId == bikeId)?.SerialNumber!;
    private int? GetBikeTypeId(int bikeId) => _bikes?.FirstOrDefault(p => p.BicycleId == bikeId)?.TypeId!;
    private string GetBikeType(int? typeId) => _types?.FirstOrDefault(p => p.TypeId == typeId)?.Type!;

}